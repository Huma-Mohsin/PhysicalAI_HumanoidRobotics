# ============================================================================
# Physical AI RAG Platform - Environment Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_NAME=Physical AI & Humanoid Robotics RAG Platform API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# ----------------------------------------------------------------------------
# API Server Configuration
# ----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# ----------------------------------------------------------------------------
# Database Configuration (Neon Postgres)
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@ep-your-endpoint.us-east-2.aws.neon.tech/dbname?sslmode=require
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ----------------------------------------------------------------------------
# Vector Database Configuration (Qdrant Cloud)
# ----------------------------------------------------------------------------
QDRANT_URL=https://your-cluster-url.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_EN=content_embeddings_en
QDRANT_COLLECTION_UR=content_embeddings_ur

# ----------------------------------------------------------------------------
# OpenAI Configuration
# ----------------------------------------------------------------------------
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# ----------------------------------------------------------------------------
# Security & Authentication
# ----------------------------------------------------------------------------
# Generate secure keys with: openssl rand -hex 32
SECRET_KEY=your-jwt-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# ----------------------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------------------
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000"]

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # requests per window
RATE_LIMIT_WINDOW=60  # seconds

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# ----------------------------------------------------------------------------
# RAG Configuration
# ----------------------------------------------------------------------------
RAG_TOP_K=5  # Number of chunks to retrieve
RAG_SCORE_THRESHOLD=0.7  # Minimum similarity score

# ----------------------------------------------------------------------------
# Performance & Caching
# ----------------------------------------------------------------------------
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds
